---
const { title, description, contents, comments } = Astro.props;
---

<div class="card">
  <div class="title">
    {title}
  </div>
  <article class="description">
    {description}
  </article>
  <div class="contents">
    {contents}
  </div>
  {
    comments && <div class="comments">
      {comments}
    </div>
  }
</div>

<style>
  .card {
    height: 100%;
    padding-left: 20px;
    padding-right: 20px;
    padding-top: 10px;
    padding-bottom: 10px;
    border-radius: 15px;
    background-color: #ffffff;
    box-shadow: 10px 10px 20px rgb(0, 0, 0, 20%),
    -10px -10px 20px rgb(255, 255, 255, 40%);
  }

  .title {
    font-size: 1.5rem;
    font-weight: bold;
  }
  
  .description {
    font-size: 1rem;
    border-bottom: 1px solid rgb(0, 0, 0, 20%);
  }

  .contents {
    padding-top: 20px;
    padding-bottom: 20px;
  }

  .comments {
    font-size: 1rem;
    padding-top: 10px;
    border-top: 1px solid rgb(0, 0, 0, 20%);
  }
</style>